<!-- MUSEUM HACK logo -->
<div class="large-12 large-centered medium-12 medium-centered small-12 small-centered columns" id="mhlogo">
  <br>
  <%= render 'logos/mhlogo' %>
  <br>
  <br>
</div>
<!-- end MUSEUM HACK logo -->

<!-- form validations -->
<div id="validations">
   <% if @timesheet.errors.any? %>
     <div id="error-explanation">
       <h2><%= pluralize(@timesheet.errors.count, "error") %> prohibit your timesheet from being sent:</h2>
       <ul>
       <% @timesheet.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
     </div>
  <% end %>
</div>
<!-- end form validations -->

<!-- TIMESHEET -->
<div class="large-6 large-centered medium-8 medium-centered small-11 small-centered columns" id="sheet">
  <div id="timesheet">
    <br>
  <%= form_for @timesheet do |f| %>
    <!-- Employee info -->
    <div class="row">
      <div class="large-6 large-centered medium-6 medium-centered small-7 small-centered columns">
        <%= render 'logos/employee_info' %>
      </div>
    </div>
    <br>

    <div class="row">
      <div class="large-6 medium-6 columns">
        <%= f.text_field :firstname, placeholder: "First Name", :required=>true %>
      </div>
      <div class="large-6 medium-6 columns">
        <%= f.text_field :lastname, placeholder: "Last Name", :required=>true %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 small-12 columns">
        <div class="row collapse">
          <div class="large-2 small-2 columns">
            <span class="prefix">e-mail</span>
          </div>
          <div class="large-10 small-10 columns">
            <%= f.email_field :email, :required=>true %>
          </div>
        </div>
      </div>
    </div>
    <!-- end employee info -->
    <div class="row">
      <div class="large-12 large-centered columns">
        <hr>
      </div>
    </div>

    <div class="row">
      <div class="large-6 large-centered medium-6 medium-centered small-7 small-centered columns">
        <%= render 'logos/shiftinfo' %>
      </div>
    </div>
    <br>

    <!-- shifts -->
    <div id="shifts-wrapper"></div>
    <!-- end shifts -->

    <!-- add/delete shift button -->
    <div class="row">
      <div class="large-6 large-centered medium-7 medium-centered small-9 small-centered columns">
        <div class="large-6 medium-6 small-6 columns">
          <a href="#" id="add-shift"><%= render 'logos/add_shift' %></a>
        </div>
        <div class="large-6 medium-6 small-6 columns">
          <a href="#" id="remove-shift"><%= render 'logos/remove_shift'%></a>
        </div>
      </div>
    </div>
    <br>
    <!-- end add/delete shift button -->

    <div class="row">
      <div class="large-12 columns">
        <hr>
      </div>
    </div>

    <!-- verification section -->
   <div class="row">
     <div class="large-6 large-centered medium-6 medium-centered small-7 small-centered columns">
       <%= render 'logos/grand_total' %>
     </div>
   </div>
   <br>

    <div class="row">
      <div class="large-5 large-centered medium-5 medium-centered small-8 small-centered columns">
        <div class="row collapse">
          <div class="large-3 medium-3 small-3 columns">
            <span class="prefix">hrs</span>
          </div>
          <div class="large-9 medium-9 small-9 columns">
            <%= f.text_field :total_hours, :required=>true%>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="large-5 large-centered medium-5 medium-centered small-8 small-centered columns">
        <div class="row collapse">
          <div class="large-3 medium-3 small-3 columns">
            <span class="prefix">$</span>
          </div>
          <div class="large-9 medium-9 small-9 columns">
            <%= f.text_field :grand_total, :required=>true %>
          </div>
        </div>
      </div>
    </div>
    <!-- end verification section -->
  </div>
  <!-- review form -->

  <!-- div id="email-preview">
    <%#= render 'preview'%>
  </div> -->
  <div class="row">
    <div class="large-12 medium-12 small-12 columns">
      <%= render 'logos/submit_ribbon' %>
    </div>
  </div>
  <br>
  <div class="row collapse">
    <div class="large-5 large-centered medium-5 medium-centered small-8 small-centered columns">
      <!-- <div class="large-6 columns" id="hide-review">
        <button name="review" class="button expand" id="review">Review</button>
      </div> -->
      <%= f.submit "SUBMIT", class: "button expand" %>
    </div>
  </div>
  <% end %>
</div>
<!-- end TIMESHEET -->


<div class="shift hidden" id="new-shift-row-">
  <div class="row">
    <div class="large-12 large-centered columns">
      <hr>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="large-6 medium-6 small-12 columns">
      <div class="row collapse">
        <div class="large-3 medium-3 small-2 columns">
          <span class="prefix">date</span>
        </div>
        <div class="large-9 medium-9 small-10 columns">
          <input class="date" id="timesheet_date" name="timesheet[shifts][][date]" type="date" required>
        </div>
      </div>
    </div>
    <div class="large-6 medium-6 small-12 columns">
      <div class="row collapse">
        <div class="large-3 medium-3 small-2 columns">
          <span class="prefix">time</span>
        </div>
        <div class="large-9 medium-9 small-10 columns">
          <input class="start_time" id="timesheet_start_time" name="timesheet[shifts][][start_time]" placeholder="Start Time" type="time" required>
        </div>
      </div>
    </div>
  </div>
  <div class="rate-div-1 row">
    <div class="large-6 medium-6 small-12 columns">
      <input type="text" class="position" name="timesheet[shifts][][position]" placeholder="Position" type="text" required></div>
      <div class="rate-div-2 large-6 medium-6 small-12 columns">
        <div class="rate-div-3 row collapse">
          <div class="large-2 medium-2 small-2 columns">
            <span class="prefix">$</span>
          </div>
          <div class="rate-div-4 large-10 medium-10 small-10 columns">
            <input class="rate" id="timesheet_pay_rate" name="timesheet[shifts][][pay_rate]" placeholder="Pay Rate" type="text" required>
          </div>
        </div>
      </div>
    </div>
    <div class="subtotal-div-1 hours-div-1 row">
      <div class="hours-div-2 large-6 medium-6 small-12 columns">
        <div class="hours-div-3 row collapse">
          <div class="large-3 medium-3 small-2 columns">
            <span class="prefix">hrs</span>
          </div>
          <div class="hours-div-4 large-9 medium-9 small-10 columns">
            <input class="hours" id="timesheet_hours_worked" name="timesheet[shifts][][hours_worked]" placeholder="Time On Shift" type="text" required>
          </div>
        </div>
      </div>
      <div class="subtotal-div-2 large-6 medium-6 small-12 columns">
        <div class="subtotal-div-3 row collapse">
          <div class="large-2 medium-2 small-2 columns">
            <span class="prefix">$</span>
          </div>
          <div class="subtotal-div-4 large-10 medium-10 small-10 columns">
            <input class="subtotal" name="timesheet[shifts][][subtotal]" placeholder="Subtotal" type="text" required>
          </div>
        </div>
      </div>
    </div>
  </div>
