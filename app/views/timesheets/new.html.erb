<div class="large-12 large-centered columns" id="mhlogo">
  <br>
  <%= render 'mhlogo' %>
  <br>
  <br>
</div>
<div id="validations">
   <% if @timesheet.errors.any? %>
     <div id="error-explanation">
       <h2><%= pluralize(@timesheet.errors.count, "error") %> prohibit your timesheet from being sent:</h2>
       <ul>
       <% @timesheet.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
     </div>
  <% end %>
</div>

<div class="large-5 large-centered columns" id="sheet">
  <div id="timesheet">
    <br>
    <br>
  <%= form_for @timesheet do |f| %>
    <!-- Employee info -->
    <div class="row">
      <div class="large-6 columns">
        <%= f.text_field :firstname, placeholder: "First Name" %>
      </div>
      <div class="large-6 columns">
        <%= f.text_field :lastname, placeholder: "Last Name" %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.email_field :email, placeholder: "Email"%>
      </div>
    </div>

    <div class="row">
      <div class="large-12 large-centered columns">
        <hr>
      </div>
    </div>
    <!-- end employee info -->

    <div class="row">
      <div class="large-6 large-centered columns" id="shift_info">
        <%= render 'shiftinfo' %>
      </div>
    </div>
    <br>

    <!-- Date/StartTime -->
    <div class="row">
        <div class="large-6 columns">
          <div class="row collapse">
            <div class="large-3 columns">
              <span class="prefix">date</span>
            </div>
            <div class="large-9 columns">
              <%= f.date_field :date %>
            </div>
          </div>
        </div>
        <div class="large-6 columns">
          <%= f.text_field :start_time, placeholder: "Start Time"%>
        </div>
      </div>

    <!-- end date/starttime -->

    <!-- pay position and rate -->
    <div class="row">
      <div class="large-6 columns">
        <%= f.collection_select :position, Timesheet::ROLES, :to_s, :to_s %>
      </div>
      <div class="large-6 columns">
          <%= f.text_field :pay_rate, placeholder: "Pay Rate" %>
      </div>
    </div>
    <!-- pay position/rate end -->

    <!-- hours worked and subtotal  -->
    <div class="row">
      <div class="large-6 columns">
          <%= f.text_field :hours_worked, placeholder: "Hours Worked" %>
      </div>
      <div class="large-6 columns">
        <%= f.text_field :hours_worked, placeholder: "Subtotal" %>
      </div>
    </div>

    <!-- end hours worked and subtotal -->


    <!-- add shift button -->
    <div class="row">
      <div class="large-6 large-centered columns">
        <div class="large-6 columns">
          <a href="#"><%= render 'add_shift' %></a>
        </div>
        <div class="large-6 columns">
          <a href="#"><%= render 'remove_shift'%></a>
        </div>
      </div>
    </div>
    <!-- <div class="row">
      <div class="large-4 large-offset-4 columns">
        <a href="#" class="button expand">Add Shift</a>
      </div>
    </div> -->
    <!-- end add shift button -->


    <div class="row">
      <div class="large-12 columns">
        <hr>
      </div>
    </div>

    <!-- verification section -->

   <div class="row">
     <div class="large-6 large-centered columns">
       <%= render 'grand_total' %>
     </div>
   </div>

    <div class="row">
      <div class="large-6 large-centered columns">
        <%= f.text_field :grand_total, placeholder: "Total Hours"%>
      </div>
    </div>
    <div class="row">
      <div class="large-6 large-centered columns">
        <%= f.text_field :grand_total, readonly: true %>
      </div>
    </div>
    <!-- end verification section -->
  </div>

  <!-- review form -->

  <div id="email-preview">
    <%= render 'preview'%>
  </div>

  <div class="row">
    <div "large-6 large-centered columns">
      <div class="large-6 columns" id="hide-review">
        <button name="review" class="button expand" id="review">Review</button>
      </div>
      <div class="large-6 columns">
        <%= f.submit "Submit", class: "button expand" %>
      </div>
    </div>
  </div>


  <% end %>

</div>
<br>
<br>
